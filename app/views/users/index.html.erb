<h1>Welcome</h1>
<hr />
<!-- registration -->
<form action="users/register" method="POST">
  <input type="text" name='full_name' placeholder="Your full name" autofocus />
  <br/>
  <input type="text" name='street_address' placeholder="Street address" />
  <br/>
  <input type="text" name='city' placeholder="City" autofocus />
  <br />
  <input type="text" name='state' placeholder="State" />
  <br />
  <input type="text" name='Postal_code' placeholder="postal_code" autofocus />
  <br />
  <input type="text" name='country' placeholder="Country" autofocus />
  <br />
  <input type="text" name='email' placeholder="email" />
  <br />

  <input type="text" name="phone1" placeholder="Phone"/>
  <br />

  <input type="text" name="phone2" placeholder="Phone"/>
  <br />

  <input type="text" name="phone3" placeholder="Phone"/>
  <br />
  <br />
  <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>
  <input type="text" name='user_id' placeholder="user id" autofocus />
  <br />
  <input type="password" name='password' placeholder="password" />
  <br />
  <input type="submit" value='Register' />
</form>

<hr/>
<br />
<br />
<hr/>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<!-- Log in -->
<form action="users/login" method="POST">
  <input type="text" name="login_user_id" placeholder="User name"><br>
  <input type="password" name="login_password" placeholder="Password">
  <br />
  <input type="submit" value="Log In">
</form>
